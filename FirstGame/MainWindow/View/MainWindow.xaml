<Window x:Class="Snake.MainWindow.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake.MainWindow.View"
        xmlns:vm="clr-namespace:Snake.MainWindow.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding Key="A" Command="{Binding ChangeDirectionCommand}" CommandParameter="0"/>
        <KeyBinding Key="W" Command="{Binding ChangeDirectionCommand}" CommandParameter="1"/>
        <KeyBinding Key="D" Command="{Binding ChangeDirectionCommand}" CommandParameter="2"/>
        <KeyBinding Key="S" Command="{Binding ChangeDirectionCommand}" CommandParameter="3"/>
    </Window.InputBindings>

    <Grid x:Name="GameRoot" Margin="16" Focusable="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Score, StringFormat=Snake - Score: {0}}"
                   FontSize="18"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Center"/>

        <Viewbox
            Grid.Row="1"
            Stretch="Uniform">
            <Grid>
                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="24" Height="24"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Green"/>

                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFilled}" Value="True">
                                                <Setter Property="Background" Value="Yellow"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsApple}" Value="True">
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Grid Background="#80000000">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Border Background="White"
                            Padding="24"
                            CornerRadius="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Game Over"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Score, StringFormat=Score: {0}}"
                                       FontSize="18"
                                       Margin="0,12,0,16"
                                       HorizontalAlignment="Center"/>
                            <Button Content="Restart"
                                    Width="140"
                                    Height="36"
                                    Command="{Binding RestartCommand}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
